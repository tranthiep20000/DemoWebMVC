@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
       <div class="col-6">
           <h2 class="text-primary">Category List</h2>
       </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
       </div>
    </div>
</div>
<hr />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Id
            </th>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Function
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td width="30%">
                    @category.Id
                </td>
                <td width="30%">
                    @category.Name
                </td>
                <td width="30%">
                    @category.DisplayOrder
                </td>
                <td width="100%" style="display:flex; justify-content:center">
                    <div class="w-50 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                    </div>
                  <div class="w-50 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2"><i class="bi bi-pencil-square"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>  
</table>

